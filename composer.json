{
    "name": "windwalker/record",
    "type": "windwalker-package",
    "description": "Windwalker Record package",
    "keywords": ["windwalker", "framework", "record"],
    "homepage": "https://github.com/ventoviro/windwalker-record",
    "license": "LGPL-2.0+",
    "require": {
        "php": ">=5.3.10",
        "windwalker/database": "~3.0",
        "windwalker/datamapper": "~3.0"
    },
    "require-dev": {
        "windwalker/test": "~3.0",
        "windwalker/utilities": "~3.0"
    },
    "minimum-stability": "dev",
    "suggest": {
        "windwalker/event": "Install 2.* if you want to use hooks."
    },
    "autoload": {
        "psr-4": {
            "Windwalker\\Record\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    }
}
